    {{setTitle 'Search'}}

<section class="search-container">
    <h2>Search Recipes</h2>
    <form method="GET">
        <input type="text" id="search" name="search" value="{{query.search}}" placeholder="Search for recipes...">
        <button type="submit">Search</button>
    </form>
    <div class="search-results">
        {{#each recipe}}
        {{>recipe}}
        {{else}}
        <p class="no-match">There are no recipes found yet!</p>
        {{/each}}
    </div>
</section>