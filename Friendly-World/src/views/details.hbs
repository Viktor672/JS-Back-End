<main class="details">
    <section id="details">
        <div id="details-wrapper">
            <p id="details-title">Name: {{animalData.name}}</p>
            <div id="img-wrapper">
                <img src="{{animalData.image}}" />
            </div>
            <div id="info-wrapper">
                <table>
                    <tr>
                        <td>
                            <p>
                                Years: <span id="details-years">{{animalData.years}}</span>
                            </p>
                        </td>
                        <td>
                            <p>Kind: <span id="details-kind">{{animalData.kind}}</span></p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p>Need of: <span id="details-need">{{animalData.need}}</span></p>
                        </td>
                        <td>
                            <p>Location: <span id="details-location">{{animalData.location}}</span></p>
                        </td>
                    </tr>
                </table>
                <p>Description: <span id="details-description">{{animalData.description}}</span></p>
            </div>

            <!--Edit and Delete are only for creator-->
            <div id="action-buttons">
                {{#if user}}
                {{#if isOwner}}
                <a href="/{{animalData._id}}/edit">Edit</a>
                <a href="/{{animalData._id}}/delete">Delete</a>
                {{else}}
                {{#unless hasDonated}}
                <a href="/{{animalData._id}}/donate" id="donation-btn">Donation</a>
                {{else}}
                <p id="already-donated">You already donated!</p>
                {{/unless}}
                {{/if}}
                {{/if}}
            </div>
        </div>
    </section>
</main>