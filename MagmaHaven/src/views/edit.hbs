{{setTitle "Edit"}}

<section id="edit-container">
    <div class="edit-container-info">
        <h1>Edit Announcement</h1>
        <form method="POST">
            <label>Name:</label>
            <input type="text" id="name" name="name" value="{{volcanoData.name}}">
            <label>Location:</label>
            <input type="text" id="location" name="location" value="{{volcanoData.location}}">
            <label>Elevation:</label>
            <input type="number" id="elevations" name="elevation" value="{{volcanoData.elevation}}">
            <label>Year of Last Eruption:</label>
            <input type="number" id="last-year-eruption" name="lastEruption" value="{{volcanoData.lastEruption}}">
            <label>Image:</label>
            <input type="text" id="image" name="image" value="{{volcanoData.image}}">
            <label>Volcano Type:</label>
            <select id="type" name="typeVolcano">
                {{#each categories}}
                <option value="{{value}}" {{selected}}>{{label}}</option>
                {{/each}}
            </select>
            <label>Description:</label>
            <textarea id="description" name="description" placeholder="..."> {{volcanoData.description}}</textarea>
            <input type="submit" id="btn" value="Submit"></input>
        </form>
    </div>
</section>