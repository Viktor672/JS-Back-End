<section id="details-page">

    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">

                <h1>{{movieObj.title}}</h1>
                <div class="card-movie">
                    <div class="first-info">
                        <p class="card-genre">Genre: {{movieObj.genre}}</p>
                        <p class="card-director">Directror: {{movieObj.director}}</p>

                    </div>
                    <div class="second-info">

                        <p class="card-year">Year: {{movieObj.year}}</p>
                        <p class="card-ranking">Rating: <span id="stars">{{showRating movieObj.rating}}</span></p>  
                    </div>

                </div>

                <p class="disc">Description: {{movieObj.description}}</p>
                <p class="card-category">Category: {{movieObj.category}}</p>

               {{#if isCreator}}
                <div style="display: flex; justify-content: center;">
                    <a href="/movies/{{movieObj.id}}/attach-cast" class="details">Attach</a>
                    <a href="/movies/{{movieObj.id}}/edit" class="details">Edit</a>
                    <a href="/movies/{{movieObj.id}}/delete" class="details">Delete</a>
                </div>
                {{/if}}

            </div>
        </div>
        <div class="card_right">
            <img src="{{movieObj.imageUrl}}" alt={{movieObj.title}}>
        </div>
    </div>

    <div class="main-cast-card">
        {{#each movieObj.casts}}
        <div class="cast-card">
            <div class="card-img">
                <img src={{imageUrl}} alt{{name}}>
            </div>
            <div class="cast-info">
                <h1>{{name}}</h1>
                <h3>Age: {{age}}</h3>
                <h3>Born: {{born}}</h3>
                <h3>Name in Movie: </h3>
            </div>
        </div>
        {{/each}}
    </div>
</section>